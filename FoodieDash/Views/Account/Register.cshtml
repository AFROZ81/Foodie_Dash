@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - FoodieDash</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100%;
            width: 100%;
        }

        /* Left Side: New Professional Vegetarian Image */
        .left-pane {
            flex: 1;
            /* Updated Image URL */
            background: url('https://images.unsplash.com/photo-1473093295043-cdd812d0e601?q=80&w=2070&auto=format&fit=crop') no-repeat center center;
            background-size: cover;
            position: relative;
        }

            .left-pane::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.2);
            }

        .right-pane {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            padding: 40px;
        }

        .auth-container {
            width: 100%;
            max-width: 400px;
        }

        .brand-logo {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 10px;
            display: block;
            text-align: center;
        }

        .brand-accent {
            color: #ff6b6b;
        }

        /* Shared Input Styles */
        .input-group-text {
            background-color: #f9f9f9;
            border: 1px solid #e0e0e0;
            color: #636e72;
        }

        .form-control {
            padding: 12px 10px;
            border-top: 1px solid #e0e0e0;
            border-bottom: 1px solid #e0e0e0;
            border-left: none;
            border-right: none;
            background-color: #f9f9f9;
        }

            .form-control:focus {
                background-color: #fff;
                box-shadow: none;
                border-color: #e0e0e0;
            }

        /* Highlight Group on Focus */
        .input-group:focus-within .input-group-text,
        .input-group:focus-within .form-control {
            border-color: #2d3436;
            background-color: #fff;
        }

        .input-group:focus-within {
            box-shadow: 0 0 0 0.2rem rgba(45, 52, 54, 0.15);
            border-radius: 10px;
        }

        .input-group .input-group-text:first-child {
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
            border-right: none;
        }

        .input-group .input-group-text:last-child {
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
            border-left: none;
            cursor: pointer;
        }

        .input-group-text, .form-control {
            transition: all 0.3s;
        }

        .btn-register {
            background-color: #2d3436;
            color: white;
            font-weight: 600;
            padding: 12px;
            border-radius: 10px;
            width: 100%;
            border: none;
            margin-top: 20px;
            transition: all 0.3s;
        }

            .btn-register:hover {
                background-color: #000;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0, 0.2);
            }

        @@media (max-width: 768px) {
            .left-pane {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="split-screen">
        <div class="left-pane"></div>

        <div class="right-pane">
            <div class="auth-container">
                <div class="text-center mb-4">
                    <span class="brand-logo">Join <span class="brand-accent">FoodieDash</span></span>
                    <p class="text-muted">Create an account to start ordering.</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center small p-2 mb-3">
                        @ViewBag.Error
                    </div>
                }

                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">USERNAME</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" name="username" class="form-control" placeholder="Choose a username" required
                                   style="border-right: 1px solid #e0e0e0; border-top-right-radius: 10px; border-bottom-right-radius: 10px;">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">EMAIL</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" name="email" class="form-control" placeholder="name@example.com" required
                                   style="border-right: 1px solid #e0e0e0; border-top-right-radius: 10px; border-bottom-right-radius: 10px;">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">PASSWORD</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" name="password" class="form-control" id="regPassword" placeholder="••••••••" required>
                            <span class="input-group-text" onclick="togglePasswordVisibility('regPassword', 'iconRegPass')">
                                <i class="bi bi-eye-slash" id="iconRegPass"></i>
                            </span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">CONFIRM PASSWORD</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" placeholder="••••••••" required>
                            <span class="input-group-text" onclick="togglePasswordVisibility('confirmPassword', 'iconConfirmPass')">
                                <i class="bi bi-eye-slash" id="iconConfirmPass"></i>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="btn-register">CREATE ACCOUNT</button>

                    <div class="text-center mt-4">
                        <span class="text-muted small">Already have an account? </span>
                        <a asp-controller="Account" asp-action="Login" class="fw-bold text-decoration-none" style="color: #ff6b6b;">Login here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const icon = document.getElementById(iconId);

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            }
        }
    </script>
</body>
</html>