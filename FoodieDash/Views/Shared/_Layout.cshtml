<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodieDash</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodieDash.styles.css" asp-append-version="true" />

    <style>
        /* Internal styles to ensure it looks good immediately */
        :root {
            --primary-color: #ff6b6b; /* Matches your 'Add' buttons */
            --dark-color: #2d3436;
            --light-bg: #f8f9fa;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-bg);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #ffffff !important;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--dark-color) !important;
            letter-spacing: -0.5px;
        }

        .brand-accent {
            color: var(--primary-color);
        }

        .nav-link {
            font-weight: 500;
            color: #636e72 !important;
            margin: 0 10px;
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--primary-color) !important;
            }

        /* Cart Badge Styling */
        .cart-btn {
            position: relative;
            color: var(--dark-color);
            font-size: 1.4rem;
            transition: transform 0.2s;
        }

            .cart-btn:hover {
                transform: scale(1.1);
                color: var(--primary-color);
            }

        .badge-notification {
            position: absolute;
            top: -5px;
            right: -8px;
            background-color: var(--primary-color);
            color: white;
            font-size: 0.7rem;
            padding: 4px 7px;
            border-radius: 50%;
            border: 2px solid #fff;
        }

        /* Main Content & Footer */
        main {
            flex: 1;
        }

        .footer {
            background-color: #fff;
            border-top: 1px solid #eee;
            margin-top: auto;
            padding: 20px 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-fire brand-accent"></i> Foodie<span class="brand-accent">Dash</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MenuItem" asp-action="Index">Menu</a>
                        </li>

                        <li class="nav-item ms-3">
                            <a class="cart-btn" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-bag-heart-fill"></i>
                                <span id="cart-count-badge" class="badge-notification">
                                    @* Inject your real count here *@
                                    0
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center">
        <div class="container">
            &copy; 2026 - <strong>FoodieDash</strong> - Crafted with <i class="bi bi-heart-fill text-danger"></i> for food lovers.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>