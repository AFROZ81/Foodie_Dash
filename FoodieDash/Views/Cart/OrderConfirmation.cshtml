@model int

@{
    ViewData["Title"] = "Order Confirmed";
}

<style>
    body {
        background-color: #f0f2f5;
    }

    /* Centering Wrapper */
    .confirmation-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Main Card */
    .success-card {
        background: white;
        border-radius: 24px;
        padding: 40px;
        max-width: 550px;
        width: 100%;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        text-align: center;
        border: 1px solid #fff;
    }

    /* Animated Icon */
    .icon-container {
        width: 100px;
        height: 100px;
        background: #d1e7dd;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 25px;
        animation: pulse 2s infinite;
    }

    .success-icon {
        color: #198754;
        font-size: 3.5rem;
    }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(25, 135, 84, 0.4);
        }

        70% {
            box-shadow: 0 0 0 20px rgba(25, 135, 84, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(25, 135, 84, 0);
        }
    }

    /* Typography */
    .order-title {
        font-weight: 800;
        color: #2d3436;
        margin-bottom: 10px;
    }

    .order-subtitle {
        color: #636e72;
        font-size: 1.1rem;
        margin-bottom: 25px;
    }

    /* Order ID Badge */
    .order-id-badge {
        background: #f8f9fa;
        border: 2px dashed #dfe6e9;
        padding: 10px 25px;
        border-radius: 12px;
        display: inline-block;
        font-family: 'Courier New', monospace;
        font-weight: 700;
        color: #2d3436;
        font-size: 1.2rem;
        margin-bottom: 30px;
    }

    /* Progress Stepper (Visual Only) */
    .stepper {
        display: flex;
        justify-content: space-between;
        margin-bottom: 40px;
        position: relative;
    }

        .stepper::before {
            content: '';
            position: absolute;
            top: 15px;
            left: 0;
            width: 100%;
            height: 2px;
            background: #e9ecef;
            z-index: 0;
        }

    .step-item {
        position: relative;
        z-index: 1;
        background: white;
        padding: 0 10px;
        text-align: center;
    }

    .step-circle {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #e9ecef;
        margin: 0 auto 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #636e72;
    }

    .step-active .step-circle {
        background: #198754;
        color: white;
    }

    .step-label {
        font-size: 0.8rem;
        color: #636e72;
        font-weight: 600;
    }

    .step-active .step-label {
        color: #198754;
    }

    /* Buttons */
    .btn-home {
        background: #2d3436;
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
    }

        .btn-home:hover {
            background: #000;
            color: white;
            transform: translateY(-2px);
        }

    .btn-track {
        background: white;
        color: #2d3436;
        border: 2px solid #e9ecef;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        margin-right: 10px;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-track:hover {
            border-color: #2d3436;
            background: #f8f9fa;
            color: #2d3436;
        }
</style>

<div class="confirmation-wrapper">
    <div class="success-card">

        <div class="icon-container">
            <i class="bi bi-check-lg success-icon"></i>
        </div>

        <h1 class="order-title">Order Placed!</h1>
        <p class="order-subtitle">Sit tight! We've received your order and are getting it ready.</p>

        <div class="order-id-badge">
            ORDER #@Model
        </div>

        <div class="stepper">
            <div class="step-item step-active">
                <div class="step-circle"><i class="bi bi-check"></i></div>
                <div class="step-label">Confirmed</div>
            </div>
            <div class="step-item">
                <div class="step-circle">2</div>
                <div class="step-label">Cooking</div>
            </div>
            <div class="step-item">
                <div class="step-circle">3</div>
                <div class="step-label">On Way</div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <a href="#" class="btn-track">Track Order</a>

            <a asp-controller="Home" asp-action="Index" class="btn-home">
                Continue Shopping
            </a>
        </div>

        <div class="mt-4">
            <small class="text-muted">Need help? <a href="#" class="text-decoration-none fw-bold text-dark">Contact Support</a></small>
        </div>

    </div>
</div>