@model List<FoodieDash.Models.MenuItem>

@{
    ViewData["Title"] = "Your Shopping Cart";
    double grandTotal = 0;
}

<div class="container p-3">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-danger bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h5 class="text-white py-2">Shopping Cart</h5>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Calculate total on the fly
                            grandTotal += item.Price;

                            <tr>
                                <td style="width: 15%">
                                    <img src="@item.ImageUrl" width="100" class="rounded" />
                                </td>
                                <td class="align-middle fw-bold">
                                    @item.Name
                                    <br />
                                    <small class="text-muted">@item.Description</small>
                                </td>
                                <td class="align-middle">
                                    ₹@item.Price
                                </td>
                                <td class="align-middle">
                                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Remove
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-6 col-md-3 offset-md-9">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                                <span class="fw-bold">Total (INR)</span>
                                <strong class="text-primary">₹@grandTotal</strong>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Continue Shopping
                        </a>
                    </div>
                    <div class="col-6 col-md-3 offset-md-6">
                        <a asp-action="Summary" class="btn btn-success form-control">
                            Proceed to Checkout
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <h3 class="text-muted">Your cart is empty! 🍔</h3>
                    <p>Go back and add some delicious food.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">View Menu</a>
                </div>
            }
        </div>
    </div>
</div>