@model List<FoodieDash.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    double grandTotal = Model.Sum(item => item.MenuItem.Price * item.Quantity);
}

<div class="container p-3">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-danger bg-gradient ml-0 py-3">
            <h5 class="text-white text-center py-2">Shopping Cart</h5>
        </div>
        <div class="card-body p-4">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle fw-bold">
                                    <img src="@item.MenuItem?.ImageUrl" width="50" class="rounded me-2" />
                                    @item.MenuItem?.Name
                                </td>
                                <td class="align-middle text-center">₹@item.MenuItem?.Price</td>
                                <td class="align-middle text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Minus" asp-route-id="@item.MenuItem?.Id" class="btn btn-outline-secondary btn-sm">-</a>
                                        <span class="btn btn-light btn-sm disabled text-dark" style="width: 40px;">@item.Quantity</span>
                                        <a asp-action="Add" asp-route-id="@item.MenuItem?.Id" class="btn btn-outline-secondary btn-sm">+</a>
                                    </div>
                                </td>
                                <td class="align-middle text-center">
                                    ₹@(item.MenuItem?.Price* item.Quantity)
                                </td>
                                <td class="align-middle text-center">
                                    <a asp-action="Remove" asp-route-id="@item.MenuItem?.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-6 col-md-3 offset-md-9">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                                <span class="fw-bold">Grand Total</span>
                                <strong class="text-primary">₹@grandTotal</strong>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-6">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100">Continue Shopping</a>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Summary" class="btn btn-success w-100">Proceed to Checkout</a>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <h3>Cart is Empty</h3>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go to Menu</a>
                </div>
            }
        </div>
    </div>
</div>