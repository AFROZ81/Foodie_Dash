@model List<FoodieDash.Models.CartItem>

@{
    ViewData["Title"] = "Your Bag";
    double grandTotal = Model.Sum(item => item.MenuItem.Price * item.Quantity);
}

<style>
    body {
        background-color: #f8f9fa;
    }

    /* Card Styling */
    .cart-container {
        max-width: 1100px;
        margin: auto;
    }

    .cart-item-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.03);
        transition: transform 0.2s;
        border: 1px solid #f0f0f0;
    }

        .cart-item-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.06);
        }

    /* Image Styling */
    .cart-img-wrapper {
        width: 100px;
        height: 100px;
        border-radius: 12px;
        overflow: hidden;
        flex-shrink: 0;
    }

    .cart-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Typography */
    .item-name {
        font-weight: 700;
        font-size: 1.1rem;
        color: #2d3436;
        margin-bottom: 4px;
    }

    .item-price {
        color: #636e72;
        font-size: 0.95rem;
    }

    .item-total {
        font-weight: 700;
        color: #2d3436;
        font-size: 1.1rem;
    }

    /* Quantity Controls */
    .qty-control {
        display: inline-flex;
        align-items: center;
        background: #f1f2f6;
        border-radius: 50px;
        padding: 5px;
    }

    .qty-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: none;
        background: white;
        color: #2d3436;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        transition: all 0.2s;
    }

        .qty-btn:hover {
            background: #ff7675;
            color: white;
        }

    .qty-val {
        width: 40px;
        text-align: center;
        font-weight: 600;
        color: #2d3436;
    }

    /* Order Summary Card */
    .summary-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.05);
        position: sticky;
        top: 20px;
    }

    .checkout-btn {
        background: linear-gradient(135deg, #00b894, #00cec9);
        color: white;
        font-weight: 700;
        padding: 15px;
        border-radius: 12px;
        width: 100%;
        border: none;
        letter-spacing: 0.5px;
        box-shadow: 0 5px 15px rgba(0, 184, 148, 0.3);
        transition: all 0.2s;
        text-decoration: none;
        display: block;
        text-align: center;
    }

        .checkout-btn:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 8px 20px rgba(0, 184, 148, 0.4);
        }

    .btn-remove {
        color: #ff7675;
        background: rgba(255, 118, 117, 0.1);
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-remove:hover {
            background: #ff7675;
            color: white;
        }

    /* Empty State */
    .empty-cart-icon {
        font-size: 5rem;
        color: #dfe6e9;
        margin-bottom: 20px;
    }
</style>

<div class="container py-5 cart-container">

    @if (Model.Any())
    {
        <div class="d-flex align-items-center mb-4">
            <h2 class="fw-bold mb-0">🛒 Your Order</h2>
            <span class="badge bg-dark ms-3 rounded-pill">@Model.Count items</span>
        </div>

        <div class="row g-5">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="cart-item-card d-flex align-items-center gap-4">
                        <div class="cart-img-wrapper">
                            <img src="@item.MenuItem?.ImageUrl" class="cart-img"
                                 onerror="this.src='https://placehold.co/150?text=Food';" alt="@item.MenuItem?.Name" />
                        </div>

                        <div class="flex-grow-1">
                            <h5 class="item-name">@item.MenuItem?.Name</h5>
                            <div class="item-price">₹@item.MenuItem?.Price per item</div>
                        </div>

                        <div class="d-flex flex-column align-items-center gap-2">
                            <div class="qty-control">
                                <a asp-action="Minus" asp-route-id="@item.MenuItem?.Id" class="qty-btn">-</a>
                                <span class="qty-val">@item.Quantity</span>
                                <a asp-action="Add" asp-route-id="@item.MenuItem?.Id" class="qty-btn">+</a>
                            </div>
                        </div>

                        <div class="text-end" style="min-width: 80px;">
                            <div class="item-total mb-2">₹@(item.MenuItem?.Price * item.Quantity)</div>
                            <div class="d-flex justify-content-end">
                                <a asp-action="Remove" asp-route-id="@item.MenuItem?.Id" class="btn-remove" title="Remove Item">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="text-muted fw-bold text-decoration-none">
                        <i class="bi bi-arrow-left me-2"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="summary-card">
                    <h4 class="fw-bold mb-4">Order Summary</h4>

                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Subtotal</span>
                        <span>₹@grandTotal.ToString("0.00")</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Taxes & Fees (5%)</span>
                        <span>₹@((grandTotal * 0.05).ToString("0.00"))</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Delivery</span>
                        <span class="text-success">Free</span>
                    </div>

                    <hr class="my-4" style="opacity: 0.1">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fw-bold fs-5">Total</span>
                        <span class="fw-bolder fs-3 text-dark">₹@((grandTotal + (grandTotal * 0.05)).ToString("0.00"))</span>
                    </div>

                    <a asp-action="Summary" class="checkout-btn">
                        Proceed to Checkout <i class="bi bi-arrow-right ms-2"></i>
                    </a>

                    <div class="text-center mt-3">
                        <small class="text-muted">🔒 Secure Checkout</small>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="empty-cart-icon">🍳</div>
            <h2 class="fw-bold text-dark">Your cart is empty</h2>
            <p class="text-muted mb-4">Looks like you haven't added anything to your cart yet.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-dark btn-lg rounded-pill px-5">
                Start Ordering
            </a>
        </div>
    }
</div>