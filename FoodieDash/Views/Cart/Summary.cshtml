@model List<FoodieDash.Models.MenuItem>

@{
    ViewData["Title"] = "Order Summary";
    double total = Model.Sum(i => i.Price);
}

<form method="post" asp-action="PlaceOrder">
    <div class="container p-3">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-success bg-gradient ml-0 py-3">
                <div class="row">
                    <div class="col-12 text-center">
                        <h5 class="text-white py-2">Confirm Your Order</h5>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="text-primary">Pickup Details</h4>
                        <div class="mb-3">
                            <label>Name</label>
                            <input name="PickupName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>Phone</label>
                            <input name="PhoneNumber" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>Email</label>
                            <input name="Email" type="email" class="form-control" required />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h4 class="text-primary">Order Items</h4>
                        <ul class="list-group mb-3">
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@item.Name</span>
                                    <strong>₹@item.Price</strong>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="fw-bold">TOTAL</span>
                                <strong class="text-success">₹@total</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success form-control">Place Order</button>
            </div>
        </div>
    </div>
</form>