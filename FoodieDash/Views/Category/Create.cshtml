@model FoodieDash.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<style>
    /* === SHARED DASHBOARD STYLES === */
    .dashboard-header {
        background: linear-gradient(135deg, #1e2024, #2d3436);
        color: white;
        padding: 40px 30px;
        border-radius: 20px;
        margin-bottom: -30px; /* Overlap effect */
        position: relative;
        z-index: 1;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .inventory-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        background: white;
        position: relative;
        z-index: 2;
        padding: 40px;
    }

    /* Form Styles */
    .form-label {
        font-weight: 600;
        color: #6c757d;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px 15px;
        border: 2px solid #f0f0f0;
        background-color: #fcfcfc;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff5e62; /* Theme Orange/Red */
            box-shadow: 0 0 0 4px rgba(255, 94, 98, 0.1);
            background-color: #fff;
        }

    /* Buttons */
    .btn-create {
        background: #ff5e62;
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        border: none;
        width: 100%;
        transition: transform 0.2s;
        box-shadow: 0 4px 15px rgba(255, 94, 98, 0.3);
    }

        .btn-create:hover {
            background: #e04b4f;
            transform: translateY(-2px);
            color: white;
        }

    .btn-back {
        background: transparent;
        color: #6c757d;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
        display: inline-block;
        margin-top: 15px;
    }

        .btn-back:hover {
            color: #343a40;
        }
</style>

<div class="container py-4">

    <div class="dashboard-header d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-1">✨ Create Category</h2>
            <p class="mb-0 text-white-50">Add a new section to your menu inventory</p>
        </div>
        <div class="text-white opacity-25 d-none d-md-block">
            <i class="bi bi-folder-plus" style="font-size: 2.5rem;"></i>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="inventory-card">

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Desserts, Starters..." />
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="DisplayOrder" class="form-control" placeholder="e.g. 1, 2, 3..." />
                        <div class="form-text text-muted small">Determines the sequence in the menu.</div>
                        <span asp-validation-for="DisplayOrder" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="text-center mt-5">
                        <button type="submit" class="btn-create">
                            Create Category
                        </button>
                        <br />
                        <a asp-action="Index" class="btn-back">
                            ← Back to Inventory
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}