@model FoodieDash.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<style>
    /* === DASHBOARD THEME (Danger Variant) === */
    .dashboard-header {
        background: linear-gradient(135deg, #eb3b5a, #fc5c65); /* Soft Red */
        color: white;
        padding: 40px 30px;
        border-radius: 20px;
        margin-bottom: -30px;
        position: relative;
        z-index: 1;
        box-shadow: 0 10px 30px rgba(235, 59, 90, 0.3);
    }

    .inventory-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        background: white;
        position: relative;
        z-index: 2;
        padding: 50px 40px;
        text-align: center;
    }

    /* Icon Styling */
    .delete-icon-wrapper {
        width: 100px;
        height: 100px;
        background-color: #fff0f1;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin: 0 auto 25px auto;
        color: #eb3b5a;
        box-shadow: 0 0 0 10px rgba(235, 59, 90, 0.05);
    }

    /* Typography */
    .category-name {
        font-weight: 800;
        color: #2d3436;
        font-size: 2rem;
        margin-bottom: 10px;
    }

    .order-badge {
        background-color: #f1f2f6;
        color: #747d8c;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 30px;
    }

    /* Warning Box */
    .warning-box {
        background-color: #fff5f5;
        border: 1px solid #ffcccc;
        color: #c0392b;
        padding: 15px;
        border-radius: 10px;
        font-size: 0.95rem;
        margin-bottom: 30px;
        text-align: left;
    }

    /* Buttons */
    .btn-delete {
        background: #eb3b5a;
        color: white;
        padding: 12px 40px;
        border-radius: 50px;
        font-weight: 700;
        border: none;
        width: 100%;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 15px rgba(235, 59, 90, 0.3);
    }

        .btn-delete:hover {
            background: #d6304c;
            transform: translateY(-2px);
            color: white;
        }

    .btn-cancel {
        color: #6c757d;
        font-weight: 600;
        text-decoration: none;
        margin-top: 20px;
        display: block;
    }

        .btn-cancel:hover {
            color: #343a40;
            text-decoration: underline;
        }
</style>

<div class="container py-4">

    <div class="dashboard-header d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-1">⚠️ Remove Category</h2>
            <p class="mb-0 text-white-50">Confirm deletion of this category</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="inventory-card">

                <div class="delete-icon-wrapper">
                    🗑️
                </div>

                <h1 class="category-name">@Model.Name</h1>
                <div class="order-badge">Display Order: #@Model.DisplayOrder</div>

                <div class="warning-box">
                    <div class="d-flex">
                        <div class="me-3" style="font-size: 1.2rem;">🛑</div>
                        <div>
                            <strong>Heads up!</strong>
                            <p class="mb-0 mt-1 small">
                                Deleting this category might affect the display of menu items assigned to it. This action cannot be undone.
                            </p>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn-delete">Yes, Delete Category</button>
                </form>

                <a asp-action="Index" class="btn-cancel">Cancel & Keep Category</a>

            </div>
        </div>
    </div>
</div>