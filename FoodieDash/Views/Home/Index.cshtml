@model IEnumerable<FoodieDash.Models.MenuItem>

@{
    ViewData["Title"] = "Menu";
}

<div class="container my-4">
    <div class="text-center p-5 bg-dark text-white rounded mb-5"
         style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=1200&q=80'); background-size: cover; background-position: center;">
        <h1 class="display-4 fw-bold">Welcome to FoodieDash</h1>
        <p class="lead">Fresh food delivered to your doorstep in minutes.</p>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name"
                         style="height: 250px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title fw-bold text-dark mb-0">@item.Name</h5>
                            <span class="badge bg-success">@(item.Category?.Name ?? "No Category")</span>
                        </div>

                        <p class="card-text text-muted small flex-grow-1">
                            @item.Description
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <h5 class="text-primary fw-bold mb-0">₹@item.Price</h5>
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>