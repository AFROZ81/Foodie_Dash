@model FoodieDash.Models.MenuItem

@{
    ViewData["Title"] = "Delete Item";
}

<style>
    /* === DASHBOARD THEME (Danger Variant) === */
    .dashboard-header {
        /* Red Gradient for Delete Page */
        background: linear-gradient(135deg, #c0392b, #e74c3c);
        color: white;
        padding: 40px 30px;
        border-radius: 20px;
        margin-bottom: -30px;
        position: relative;
        z-index: 1;
        box-shadow: 0 10px 30px rgba(231, 76, 60, 0.3);
    }

    .inventory-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        background: white;
        position: relative;
        z-index: 2;
        overflow: hidden;
    }

    /* Image Section */
    .detail-image-wrapper {
        height: 100%;
        min-height: 400px;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-right: 1px solid #f0f0f0;
        position: relative;
    }

    /* Grayscale filter on image to suggest 'inactive/delete' state */
    .detail-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.5s ease;
        filter: grayscale(30%);
    }

    .detail-image-wrapper:hover .detail-image {
        filter: grayscale(0%);
        transform: scale(1.05);
    }

    /* Content Styling */
    .detail-content {
        padding: 40px;
    }

    .item-title {
        font-weight: 800;
        color: #2d3436;
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
    }

    .item-price {
        font-size: 1.8rem;
        color: #636e72;
        font-weight: 700;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Warning Alert */
    .alert-warning-custom {
        background-color: #fff5f5;
        border-left: 5px solid #ff5e62;
        color: #c0392b;
        padding: 15px;
        border-radius: 8px;
        font-size: 0.9rem;
        margin-bottom: 25px;
    }

    /* Buttons */
    .btn-delete-confirm {
        background: #c0392b;
        color: white;
        padding: 14px 35px;
        border-radius: 50px;
        font-weight: 700;
        border: none;
        width: 100%;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 15px rgba(192, 57, 43, 0.3);
    }

        .btn-delete-confirm:hover {
            background: #a93226;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(192, 57, 43, 0.4);
            color: white;
        }

    .btn-cancel {
        color: #6c757d;
        font-weight: 600;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 15px;
    }

        .btn-cancel:hover {
            color: #343a40;
            text-decoration: underline;
        }
</style>

<div class="container py-4">

    <div class="dashboard-header d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-1">⚠️ Delete Confirmation</h2>
            <p class="mb-0 text-white-50">Are you sure you want to remove this item?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="inventory-card p-0">
                <div class="row g-0">

                    <div class="col-md-5">
                        <div class="detail-image-wrapper">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="detail-image" alt="@Model.Name"
                                     onerror="this.src='https://placehold.co/600x800?text=No+Image'; this.style.objectFit='contain';" />
                            }
                            else
                            {
                                <div class="text-center text-muted opacity-50">
                                    <h1 class="display-1">🗑️</h1>
                                </div>
                            }

                            <div style="position: absolute; top: 20px; left: 20px; background: rgba(0,0,0,0.6); color: white; padding: 5px 15px; border-radius: 20px; font-size: 0.8rem; font-weight: bold;">
                                #@Model.Id
                            </div>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <div class="detail-content d-flex flex-column h-100">

                            <div class="mb-2">
                                <span class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem; letter-spacing: 1px;">
                                    @Model.Category?.Name / @Model.Type
                                </span>
                            </div>

                            <h1 class="item-title">@Model.Name</h1>
                            <div class="item-price mb-4">₹@Model.Price</div>

                            <p class="text-muted mb-4">
                                @Model.Description
                            </p>

                            <div class="alert-warning-custom">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Warning:</strong> This action is permanent. This item will be removed from your menu immediately and cannot be recovered.
                            </div>

                            <div class="mt-auto">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn-delete-confirm">
                                        🗑️ Yes, Delete Forever
                                    </button>
                                </form>
                                <a asp-action="Index" class="btn-cancel">
                                    No, Keep Item
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>