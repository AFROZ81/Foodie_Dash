@model FoodieDash.Models.MenuItem

@{
    ViewData["Title"] = "Item Details";
}

<style>
    /* === DASHBOARD THEME STYLES === */
    .dashboard-header {
        background: linear-gradient(135deg, #1e2024, #2d3436);
        color: white;
        padding: 40px 30px;
        border-radius: 20px;
        margin-bottom: -30px;
        position: relative;
        z-index: 1;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .inventory-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        background: white;
        position: relative;
        z-index: 2;
        overflow: hidden; /* Ensures image fits corners */
    }

    /* Image Section */
    .detail-image-wrapper {
        height: 100%;
        min-height: 400px;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-right: 1px solid #f0f0f0;
    }

    .detail-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .detail-image-wrapper:hover .detail-image {
        transform: scale(1.05);
    }

    /* Text & Typography */
    .detail-content {
        padding: 40px;
    }

    .item-title {
        font-weight: 800;
        color: #2d3436;
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
    }

    .item-price {
        font-size: 1.8rem;
        color: #ff5e62; /* Theme Red */
        font-weight: 700;
        font-family: 'Segoe UI', sans-serif;
    }

    .section-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
        color: #adb5bd;
        margin-bottom: 8px;
        display: block;
    }

    .description-text {
        font-size: 1.05rem;
        line-height: 1.8;
        color: #636e72;
    }

    /* Badges */
    .badge-category {
        background-color: #e3f2fd;
        color: #1976d2;
        font-size: 0.85rem;
        padding: 6px 14px;
        border-radius: 30px;
        font-weight: 600;
        display: inline-block;
        margin-right: 10px;
    }

    .badge-veg {
        color: #2e7d32;
        background: #e8f5e9;
        border: 1px solid #c8e6c9;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.8rem;
    }

    .badge-nonveg {
        color: #c62828;
        background: #ffebee;
        border: 1px solid #ffcdd2;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.8rem;
    }

    /* Buttons */
    .btn-edit-action {
        background: #ffca28; /* Amber */
        color: #fff;
        padding: 12px 35px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        border: none;
        box-shadow: 0 4px 15px rgba(255, 202, 40, 0.4);
        transition: all 0.2s;
    }

        .btn-edit-action:hover {
            background: #ffc107;
            transform: translateY(-2px);
            color: white;
        }

    .btn-back-link {
        color: #6c757d;
        font-weight: 600;
        text-decoration: none;
        margin-left: 20px;
    }

        .btn-back-link:hover {
            text-decoration: underline;
            color: #343a40;
        }
</style>

<div class="container py-4">

    <div class="dashboard-header d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-1">🔍 Item Preview</h2>
            <p class="mb-0 text-white-50">Viewing details for @Model.Name</p>
        </div>
        <div class="text-white opacity-25 d-none d-md-block">
            <h2 class="mb-0">#@Model.Id</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="inventory-card p-0">
                <div class="row g-0">

                    <div class="col-md-5">
                        <div class="detail-image-wrapper">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="detail-image" alt="@Model.Name"
                                     onerror="this.src='https://placehold.co/600x800?text=No+Image'; this.style.objectFit='contain';" />
                            }
                            else
                            {
                                <div class="text-center text-muted opacity-50">
                                    <h1 class="display-1">🍽️</h1>
                                    <p>No Image Uploaded</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-7">
                        <div class="detail-content d-flex flex-column h-100">

                            <div class="mb-3 d-flex align-items-center">
                                <span class="badge-category">@Model.Category?.Name</span>

                                @if (Model.Type == "Veg")
                                {
                                    <span class="badge-veg">🟢 VEG</span>
                                }
                                else if (Model.Type == "Non-Veg")
                                {
                                    <span class="badge-nonveg">🔴 NON-VEG</span>
                                }
                            </div>

                            <h1 class="item-title">@Model.Name</h1>
                            <div class="item-price mb-4">₹@Model.Price</div>

                            <hr class="opacity-10 mb-4" />

                            <div class="mb-4 flex-grow-1">
                                <span class="section-label">Description</span>
                                <p class="description-text">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Model.Description
                                    }
                                    else
                                    {
                                        <em class="text-muted">No description provided.</em>
                                    }
                                </p>
                            </div>

                            <div class="mt-auto pt-3 border-top">
                                <div class="d-flex align-items-center">
                                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-edit-action">
                                        ✏️ Edit Item
                                    </a>
                                    <a asp-action="Index" class="btn-back-link">
                                        Back to Inventory
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>